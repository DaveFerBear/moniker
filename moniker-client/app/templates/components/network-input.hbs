<div class = "network-container col-sm-6 col-md-4 col-lg-3">
    <div class = "network panel panel-default">
        <div class="panel-heading">
            <h4 class = "panel-header">
                {{attr.name}}
                <img src = {{attr.logo}}>
            </h4>
        </div>
        <div class = "panel-body" style = "background-color: {{attr.color}}">
            <div class="input-group">
                <span class="input-group-addon" id="basic-addon3">{{attr.inputText}}</span>
                {{input value=inputVal key-up = "keyUp" type="text" class="form-control" id="basic-url" aria-describedby="basic-addon3"}}
            </div>
            <div id = "loaderContainer">
                <div class = "loader"></div>
            </div>
        </div>
    </div>
</div>
{{yield}}
